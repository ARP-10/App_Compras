<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_recycler_producto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nombre_recycler_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/img_recycler_producto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_precio_recycler_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Precio"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/img_recycler_producto"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_recycler_producto" />

</androidx.constraintlayout.widget.ConstraintLayout>